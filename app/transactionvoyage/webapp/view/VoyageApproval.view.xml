<mvc:View
    xmlns:controls="sap.viz.ui5.controls"
    controllerName="com.ingenx.nauti.transactionvoyage.controller.VoyageApproval"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:semantic="sap.m.semantic"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    xmlns:cards="sap.f.cards"
    xmlns:form="sap.ui.layout.form"
    xmlns:ui="sap.ui.table"
    xmlns:u="sap.ui.unified"
    xmlns:c="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
>
    <Page
        id="detail"
        title="Voyage Approval"
        backgroundDesign="Solid"
        navButtonPress=".onPressDetailBack"
    >
   
        <HBox class="mainHeaderApproval" alignItems="End" width="100%">
            <HBox width="70%">
                <form:SimpleForm editable="true">
                    <Label
                        id="IDGenLabel1"
                        text="Voyage Number "
                    />
                    <Input
                        id="voyageNo"
                        showValueHelp="true"
                    valueHelpRequest="onVoyageNumber"
                    width="100%"
                    selectedItem=""
                />
                </form:SimpleForm>
            </HBox>
          
            <HBox class="btnForApproval" width="30%">
                <Button  text="Approve" ></Button>
                <Button  text="Reject" class="rejectBtn"></Button>
            </HBox>
            
        </HBox>

        <IconTabBar
            id="idIconTabBarNoIcons"
            tabDensityMode="Compact"
            class="icontab"
        >
            <items>
                <IconTabFilter
                    text="Approve Voyage"
                    key="info"
                >
                <ScrollContainer id="_IDGenScrollContainer2" horizontal="true"  vertical="false" class="scrollContainer">
                
                    <Table id="myTableId" items="{voyapprovalSet}" width="auto" visible="true">
                        <columns>
                            <Column width="95px">
                                <Text text="Approval Req. No."  />
                            </Column>
                            <Column>
                                <Text text="Voyage No." />
                            </Column>
